/* preview.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

/* 壁纸预览页面 */
.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}

.preview-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 2;
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  padding: 0;
  margin: 0;
}

/* 预览界面返回容器 */
.preview-navbar {
  position: absolute;
  top: env(safe-area-inset-top, 20rpx);
  left: 10rpx;
  width: 158rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 10001;
  background: transparent;
  border: none;
  gap: 14rpx;
  padding-left: 10rpx;
}

/* 导航栏按钮通用样式 */
.nav-button {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
  min-width: 56rpx;
  min-height: 56rpx;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  border: 0.5rpx solid rgba(255, 255, 255, 0.23);
}

.nav-button:active {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

/* 导航栏图标样式 */
.nav-icon {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 时间和日期显示 - 参考预览组件优化 */
.preview-time-date {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10001;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background: transparent;
}

.preview-time {
  font-size: 96rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.98);
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 1rpx;
  line-height: 1.1;
}

.preview-date {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  line-height: 1.2;
}

/* 壁纸展示区域 */
.wallpaper-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  position: relative;
  width: 100%;
  height: 100%;
}

/* 壁纸包装器 */
.wallpaper-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  background: transparent;
  overflow: hidden;
}

.wallpaper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0rpx;
  display: block;
}

/* 1:1正方形比例显示 */
.wallpaper-image-square {
  width: 100%;
  height: auto;
  aspect-ratio: 1/1;  /* 强制保持1:1比例 */
  object-fit: contain;
  margin: auto;
  border-radius: 0rpx;
}

/* 9:16竖屏比例显示 */
.wallpaper-image-vertical {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0rpx;
}

/* 底部下载按钮 */
.preview-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 12%;
  min-height: 120rpx;
  max-height: 160rpx;
  padding: 23rpx 30rpx 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  border: none;
  background: rgba(255, 255, 255, 0.7);
  z-index: 10;
  box-sizing: border-box;
}

.download-btn {
  width: 40%;
  height: 30%;
  min-height: 80rpx;
  max-height: 100rpx;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  border: none;
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.4);
  transition: all 0.3s ease;
}

.download-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 122, 255, 0.6);
  background: linear-gradient(135deg, #0056CC 0%, #003D99 100%);
}

.download-icon {
  font-size: 32rpx;
}

.download-text {
  font-size: 32rpx;
  font-weight: 600;
}
/* index.wxss */
/* 自定义导航栏样式 */
.custom-nav-bar {
  background: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999;
  padding: 0 16rpx;
  box-sizing: border-box;
}

/* 导航栏容器 */
.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: #fff;
  z-index: 998;
}

/* 导航栏左侧区域 */
.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  box-sizing: border-box;
}

/* 分享按钮 */
.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4rpx 0;
  cursor: pointer;
}

.share-icon {
  font-size: 24rpx;
  margin-bottom: 2rpx;
}

.share-text {
  font-size: 16rpx;
  color: #333;
  font-weight: 400;
}

/* 导航栏中间区域 */
.nav-center {
  display: flex;
  align-items: center;
}

/* 搜索框 */
.search-box {
  height: 32px;
  background: #f5f5f5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.search-placeholder {
  font-size: 24rpx;
  color: #999;
  flex: 1;
}

/* 导航栏右侧区域（预留胶囊按钮空间） */
.nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 内容区域 - 统一白色背景 */
.content-section {
  border-radius: 0rpx;
  margin: 0rpx;
  padding: 0rpx;
  box-shadow: none;
  min-height: 100vh; /* 改为100vh确保完全覆盖页面 */
  padding-top: 50px;
  box-sizing: border-box;
  background: #fff;
}

/* 轮播图区域 */
.carousel-section {
  background: #fff;
  padding: 5rpx 16rpx 28rpx;
  margin-bottom: 0rpx;
  box-shadow: none;
}

.carousel-swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.carousel-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  display: block;
}

.carousel-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

/* 功能区域 */
.feature-section {
  background: #fff;
  border-radius: 0rpx;
  padding: 0 16rpx 8rpx;
  margin-bottom: 0rpx;
  box-shadow: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.feature-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  box-sizing: border-box;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
  object-fit: cover;
  overflow: hidden;
}

.feature-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  font-weight: 400;
}

/* 分类区域 */
.category-section {
  background: #fff;
  border-radius: 0rpx;
  padding: 0rpx 0rpx 16rpx;
  margin-bottom: 0rpx;
  box-shadow: none;
  position: sticky;
  z-index: 997;
  padding-top: 8rpx;
  margin-top: 0;
  width: 100vw;
  box-sizing: border-box;
}

.category-tabs {
  display: flex;
  flex-wrap: nowrap;
  gap: 0rpx;
  align-items: center;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding: 0 20rpx;
  justify-content: center;
}

.category-tab {
  padding: 16rpx 20rpx;
  background: transparent;
  border-radius: 0rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  white-space: nowrap;
  text-align: center;
  flex-shrink: 0;
  position: relative;
}

.category-tab.active {
  color: #2274cdff;
  font-weight: 500;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 0;
}

.category-tab:active {
  opacity: 0.7;
}

/* 加载更多指示器 */
.load-more-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  clear: both;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据提示 */
.no-more-container {
  text-align: center;
  padding: 40rpx 0;
  clear: both;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 壁纸网格 - 紧凑间距布局 */
.covers-section {
  background: transparent;
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  box-shadow: none;
}

.covers-grid {
  overflow: hidden;
  margin: 0rpx;
  padding: 0 16rpx 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.cover-item {
  float: left;
  aspect-ratio: 9/16;
  border-radius: 16rpx;
  position: relative;
  background: transparent;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 0rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 一行3个的样式（默认） */
.cover-item-3-col {
  width: calc((100% - 32rpx) / 3);
  margin-right: 16rpx;
}

.cover-item-3-col:nth-child(3n) {
  margin-right: 0;
}

/* 一行2个的样式（当currentCategory.id为26时） */
.cover-item-2-col {
  width: calc((100% - 16rpx) / 2);
  margin-right: 16rpx;
}

.cover-item-2-col:nth-child(2n) {
  margin-right: 0;
}

.cover-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.cover-image-container {
  width: 100%;
  height: 100%;
  margin: 0rpx;
  padding: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  vertical-align: middle;
  border-radius: 3rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  background: transparent;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: rgba(255, 255, 255, 0.3);
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: rgba(255, 255, 255, 0.6);
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8%;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.nav-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #666;
}

.nav-item.active {
  color: #5AC8FA;
}

.nav-item.active .nav-text {
  color: #5AC8FA;
}

/* 内容区域底部留出空间，避免被导航栏遮挡 */
.content-section {
  padding-top: 10px;
}


/* 封面素材库页面样式 - 全屏展示 */
.container {
  padding: 0rpx !important;
  margin: 0rpx !important;
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 下载次数限制显示 */
.download-limit-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  backdrop-filter: none;
  box-shadow: none;
  width: fit-content;
  min-width: auto;
  height: auto;
}

/* 右上角位置 */
.download-limit-section.top-right {
  position: absolute;
  top: 0rpx;
  right: 30rpx;
  margin: 0;
}

.limit-info {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.limit-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.ad-unlock-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.ad-unlock-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.3);
}



.reset-icon:active {
  background: #f0f0f0;
  color: #666;
}

.search-button {
  width: 80rpx;
  height: 80rpx;
  background: transparent;
  border: none;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  flex-shrink: 0; /* 防止搜索按钮被压缩 */
  flex: none; /* 搜索按钮不参与flex布局，保持固定宽度 */
  padding: 0;
  margin: 0;
  line-height: normal;
}

.search-button::after {
  border: none;
}

.search-button-hover {
  transform: scale(0.95);
  background: rgba(0, 122, 255, 0.1);
}

.search-button:active {
  transform: scale(0.95);
  background: rgba(0, 122, 255, 0.1);
}

.search-icon {
  font-size: 40rpx;
  color: #007AFF;
}

/* 下载次数显示 */
.download-count-section {
  background: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 255, 255, 0.2);
  text-align: center;
  backdrop-filter: blur(10rpx);
  display: inline-block;
  min-width: 200rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.download-count-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
}

/* 预览界面返回容器 */
.preview-return-navbar {
  position: absolute;
  top: calc(var(--status-bar-height, 44rpx) + 56rpx);
  left: 20rpx;
  width: 158rpx;
  height: 57rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
  background: transparent;
  border: none;
  gap: 14rpx;
}

/* 自定义导航栏 - 与微信菜单按钮保持一致 */
.custom-navbar {
  position: fixed;
  top: calc(var(--status-bar-height, 44rpx) + 56rpx);
  left: 20rpx;
  width: 158rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  border: 0.5rpx solid rgba(255, 255, 255, 0.23);
  gap: 14rpx;
}

/* 导航栏按钮通用样式 */
.nav-button {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
  min-width: 40rpx;
  min-height: 40rpx;
}

.nav-button:active {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

/* 中间分隔竖线 */
.nav-separator {
  width: 1rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 导航栏图标样式 */
.nav-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(1.2) contrast(1.1);
}

/* 顶部搜索框 - 与封面对齐 */
.search-header {
  background: transparent;
  padding: calc(var(--status-bar-height, 44rpx) + 53rpx) 20rpx 0rpx;
  margin-bottom: 0rpx;
  box-shadow: none;
  display: flex;
  justify-content: center;
}

.search-container {
  position: relative;
  width: calc(100% - 360rpx);
  max-width: 500rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  height: 68rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.search-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  height: 100%;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  outline: none;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.clear-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  padding: 8rpx;
  flex-shrink: 0;
}

.clear-icon:active {
  color: rgba(255, 255, 255, 0.9);
}

/* 内容区域 - 统一浅灰色背景 */
.content-section {
  border-radius: 0rpx;
  margin: 0rpx;
  padding: 0rpx;
  box-shadow: none;
  min-height: calc(100vh - 200rpx);
}

/* 分类区域 */
.category-section {
  background: transparent;
  border-radius: 0rpx;
  padding: 20rpx 8rpx 20rpx;
  margin-bottom: 0rpx;
  box-shadow: none;
}

.category-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: center;
  align-items: center;
}

.category-tab {
  padding: 16rpx 28rpx;
  background: transparent;
  border-radius: 0rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  white-space: nowrap;
  text-align: center;
  min-width: 100rpx;
  position: relative;
  font-weight: 400;
}

.category-tab.active {
  color: #1677FF;
  font-weight: 500;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1677FF;
  border-radius: 0;
}

.category-tab:active {
  opacity: 0.7;
}

/* 排序筛选区域 */
.filter-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.filter-list {
  display: flex;
  gap: 20rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background: #1890ff;
  color: #fff;
}

.filter-group-list {
  display: flex;
  flex-wrap: wrap;
}

/* 封面网格 - 紧凑间距布局 */
.covers-section {
  background: transparent;
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  box-shadow: none;
}

.covers-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx;
  padding: 0 8rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.cover-item {
  width: calc(50% - 12rpx);
  aspect-ratio: 3/4;
  overflow: hidden;
  border-radius: 8rpx;
  position: relative;
  background: #f8f8f8;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin: 6rpx;
  padding: 0rpx;
  transition: all 0.3s ease;
}

.cover-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.cover-image-container {
  width: 100%;
  height: 100%;
  margin: 0rpx;
  padding: 0rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  margin: 0rpx;
  padding: 0rpx;
}

.cover-item:active {
  transform: scale(0.98);
}

.cover-item:active {
  transform: scale(0.95);
}

.cover-image-container {
  width: 100%;
  aspect-ratio: 3/4;
  overflow: hidden;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 20rpx 20rpx 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 50%, transparent 100%);
  color: #fff;
}

.cover-title {
  display: block;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.7);
  letter-spacing: 0.3rpx;
  line-height: 1.3;
}

/* 已去除右上角导出按钮样式 */

/* 右下角收藏按钮 - 已隐藏 */
.favorite-btn {
  position: absolute;
  bottom: 10rpx;
  right: 16rpx;
  z-index: 10;
  padding: 8rpx;
  transition: all 0.3s ease;
  display: none;
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-icon {
  font-size: 22rpx;
}

/* 已去除导出按钮相关样式 */

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  background: #f8f9fa;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 40rpx;
}

.load-btn {
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 自动加载提示样式 */
.auto-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  background: #f8f9fa;
  margin: 20rpx 0;
  border-radius: 16rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #ffffff;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1677FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载完成提示样式 */
.load-complete {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  background: #f0f9ff;
  margin: 20rpx 0;
  border-radius: 16rpx;
  border: 2rpx solid #e6f7ff;
}

.complete-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  background: #ffffff;
}

.complete-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  color: #4CAF50;
}

.complete-text {
  font-size: 28rpx;
}

/* 预览界面加载状态样式 */
.preview-loading {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 25;
}

.preview-loading .loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.preview-loading .loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.preview-loading .loading-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 预览界面加载完成提示 */
.preview-load-complete {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 25;
}

.preview-load-complete .complete-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.preview-load-complete .complete-icon {
  font-size: 32rpx;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.preview-load-complete .complete-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 预览模态框 */
/* 现代化壁纸预览样式 */
.wallpaper-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}

.error-container {
  z-index: 9999;
  display: flex;
  flex-direction: column;
  border: none;
  background: rgba(255, 107, 107, 0.05);
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1;
}

.preview-content {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  z-index: 1;
  background: #000000;
}

/* 顶部导航栏 */
.preview-navbar {
  height: 120rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #000000;
  position: relative;
  z-index: 20;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn, .home-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: none;
  transition: all 0.3s ease;
}

.back-btn:active, .home-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.back-icon, .home-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  color: #ffffff;
}

.back-text, .home-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 壁纸展示区域 */
.wallpaper-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  position: relative;
}

/* 预览swiper样式 */
.preview-swiper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.preview-swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 预览指示器样式 */
.preview-indicator {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  z-index: 20;
}

.indicator-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* iOS锁屏样式 */
.lock-screen-info {
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 15;
}

.lock-time {
  display: block;
  font-size: 96rpx;
  font-weight: 300;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

.lock-date {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif;
  font-weight: 400;
  opacity: 0.9;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 壁纸包装器 */
.wallpaper-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.wallpaper-image {
  width: 100%;
  height: auto;
  border-radius: 0rpx;
  background: #000000;
}

/* 右下角标签 */
.wallpaper-tag {
  position: absolute;
  bottom: 60rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  z-index: 20;
}

.tag-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 底部下载按钮 */
.preview-footer {
  height: 200rpx;
  padding: 0 40rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: auto;
  border: none;
  background: rgba(255, 255, 255, 0.9);
  align-self: stretch;
}

.download-btn {
  width: 50%;
  height: 88rpx;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
  border: none;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 122, 255, 0.4);
  transition: all 0.3s ease;
}

.download-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 122, 255, 0.6);
  background: linear-gradient(135deg, #0056CC 0%, #003D99 100%);
}

.download-icon {
  font-size: 32rpx;
}

.download-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 广告模态框样式 */
.ad-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
}

.ad-modal-content {
  position: relative;
  width: 75%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 28rpx;
  padding: 0;
  box-shadow: 0 25rpx 50rpx rgba(0, 0, 0, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.ad-modal-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
  position: relative;
}

.ad-modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.ad-modal-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ad-modal-body {
  text-align: center;
  padding: 30rpx 30rpx 25rpx;
}

.ad-modal-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
  animation: float 3s ease-in-out infinite;
}

.ad-modal-desc {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.ad-modal-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.highlight-count {
  color: #ff6b6b;
  font-weight: 700;
  font-size: 32rpx;
}

.ad-modal-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  font-weight: 400;
  font-style: italic;
}

.ad-modal-actions {
  display: flex;
  gap: 15rpx;
  padding: 0 30rpx 25rpx;
}

.ad-modal-btn {
  flex: 1;
  border: none;
  border-radius: 10rpx;
  padding: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.ad-modal-btn.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e8e8e8;
}

.ad-modal-btn.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.ad-modal-btn:active {
  transform: translateY(2rpx);
}

.ad-modal-btn.confirm-btn:active {
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}
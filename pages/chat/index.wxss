/* chat.wxss */


/* 内容区域 - 统一白色背景 */
.content-section {
  border-radius: 0rpx;
  margin: 0rpx;
  padding: 0rpx;
  box-shadow: none;
  min-height: calc(100vh - 44px);
  box-sizing: border-box;
  background: #fff;
}

/* 聊天背景内容 */
.chat-content {
  padding: 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  text-align: left;
}

/* 类型选择 */
.type-section {
  background: #fff;
  border-radius: 0rpx;
  padding: 16rpx;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 998;
}

.type-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: center;
  align-items: center;
}

.category-tab {
  padding: 16rpx 28rpx;
  background: transparent;
  border-radius: 0rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  white-space: nowrap;
  text-align: center;
  min-width: 100rpx;
  position: relative;
}

.category-tab.active {
  color: #2274cdff;
  font-weight: 500;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 0;
}

.category-tab:active {
  opacity: 0.7;
}

/* 壁纸展示 */
.wallpaper-section {
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

/* 壁纸网格 */
.wallpaper-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.wallpaper-item {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.wallpaper-image {
  width: 100%;
  height: 100%;
  aspect-ratio: 9/16; /* 9:16 比例 */
  object-fit: cover;
  display: block;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  background: transparent;
  grid-column: 1 / -1;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: rgba(0, 0, 0, 0.1);
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载更多指示器 */
.load-more-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  grid-column: 1 / -1;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据提示 */
.no-more-container {
  text-align: center;
  padding: 40rpx 0;
  grid-column: 1 / -1;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}


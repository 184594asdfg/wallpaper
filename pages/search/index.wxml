<!--search.wxml-->
<!-- 导航栏容器 -->
<view class="nav-container"></view>

<!-- 自定义导航栏 -->
<view class="custom-nav-bar" style="height: {{navBarHeight}}px; top: {{navBarTop}}px;">
  <!-- 左侧分享区域 -->
  <view class="nav-left">
    <view class="share-btn" bindtap="onShare">
      <text class="share-icon">📤</text>
      <text class="share-text">分享</text>
    </view>
  </view>
  
  <!-- 中间搜索框 -->
    <view class="nav-center">
      <view class="search-box" style="width: {{searchBoxWidth}}px;" bindtap="onSearchClick">
        <text class="search-placeholder">搜索壁纸</text>
      </view>
    </view>
  
  <!-- 右侧预留空间（胶囊按钮） -->
  <view class="nav-right"></view>
</view>

<!-- 内容区域 -->
<view class="content-section" style="padding-top: {{contentTop ? contentTop + 'px' : '40px'}};">
  <!-- 搜索结果区域 -->
  <view class="search-results">
    <!-- 新增区域 -->
    <view class="new-section">
      <!-- 第一行文字 -->
      <view class="section-title">推荐壁纸</view>
      <!-- 图片展示区域 -->
      <view class="images-row">
        <view class="image-card" bindtap="onImageClick" data-type="computer">
          <view class="image-placeholder" style="background-color: #3498db;">
            <text class="image-text">电脑壁纸</text>
          </view>
        </view>
        <view class="image-card" bindtap="onImageClick" data-type="moments">
          <view class="image-placeholder" style="background-color: #2ecc71;">
            <text class="image-text">朋友圈背景</text>
          </view>
        </view>
        <view class="image-card" bindtap="onImageClick" data-type="chat">
          <view class="image-placeholder" style="background-color: #f39c12;">
            <text class="image-text">聊天背景</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
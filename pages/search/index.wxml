<!--search.wxml-->
<!-- 导航栏容器 -->
<view class="nav-container"></view>

<!-- 自定义导航栏 -->
<view class="custom-nav-bar" style="height: {{navBarHeight}}px; top: {{navBarTop}}px;">
  <!-- 左侧返回区域 -->
  <view class="nav-left">
    <view class="back-btn" bindtap="onBack">
      <text class="back-icon">←</text>
    </view>
  </view>
  
  <!-- 中间搜索框 -->
    <view class="nav-center">
      <view class="search-box" style="width: {{searchBoxWidth}}px;" bindtap="onSearchClick">
        <text class="search-placeholder">搜索壁纸</text>
      </view>
    </view>
  
  <!-- 右侧预留空间（胶囊按钮） -->
  <view class="nav-right"></view>
</view>

<!-- 内容区域 -->
<view class="content-section" style="padding-top: {{contentTop ? contentTop + 'px' : '40px'}};">
  <!-- 搜索结果区域 -->
  <view class="search-results">
    <!-- 新增区域 -->
    <view class="new-section">
      <!-- 第一行文字 -->
      <view class="section-title">推荐壁纸</view>
      <!-- 图片展示区域 -->
      <view class="images-row">
        <view class="image-card" bindtap="onImageClick" data-url="/pages/computer/index">
          <view class="image-container">
            <image class="search-image" src="../../images/search/computer.jpg" mode="aspectFill"></image>
            <view class="image-text-overlay">电脑壁纸</view>
          </view>
        </view>
        <view class="image-card" bindtap="onImageClick" data-url="/pages/moments/index">
          <view class="image-container">
            <image class="search-image" src="../../images/search/moments.jpg" mode="aspectFill"></image>
            <view class="image-text-overlay">朋友圈背景</view>
          </view>
        </view>
        <view class="image-card" bindtap="onImageClick" data-url="/pages/chat/index">
          <view class="image-container">
            <image class="search-image" src="../../images/search/chat.jpg" mode="aspectFill"></image>
            <view class="image-text-overlay">聊天背景</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
/* 自定义导航栏样式 */
.custom-nav-bar {
  background: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999;
  padding: 0 16rpx;
  box-sizing: border-box;
}

/* 导航栏容器 */
.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: transparent;
  z-index: 998;
  pointer-events: none;
}

/* 导航栏左侧区域 */
.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  box-sizing: border-box;
}

/* 返回按钮 */
.back-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  cursor: pointer;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
}

/* 导航栏中间区域 */
.nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

/* 导航栏右侧区域 */
.nav-right {
  width: 80rpx;
}

/* 内容区域 */
.content-section {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 用户信息区域 */
.user-info-section {
  background: #fff;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 功能列表 */
.function-list {
  background: #fff;
  padding: 0 32rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.function-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
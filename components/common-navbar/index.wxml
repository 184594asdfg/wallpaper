<!-- components/common-navbar/index.wxml -->
<!-- 导航栏容器 -->
<view class="nav-container"></view>

<!-- 自定义导航栏 -->
<view class="custom-nav-bar" style="height: {{navBarHeight}}px; top: {{navBarTop}}px; background-color: {{backgroundColor}};">
  <!-- 左侧返回区域 -->
  <view class="nav-left">
    <view class="back-btn" catchtap="onBack">
      <text class="back-icon">←</text>
    </view>
  </view>
  
  <!-- 中间标题 -->
  <view class="nav-center">
    <view class="nav-title">{{title}}</view>
  </view>
  
  <!-- 右侧预留空间（胶囊按钮） -->
  <view class="nav-right"></view>
</view>